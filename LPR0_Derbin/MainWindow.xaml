                <TextBox x:Name="textBoxKoor1" TextInput="textBoxKoor1_TextInput" />
                <TextBox x:Name="textBoxKoor2" TextInput="textBoxKoor1_TextInput" />
                <TextBox x:Name="textBoxKoor3" TextInput="textBoxKoor1_TextInput" />

            </StackPanel>
            <StackPanel Canvas.Left="200" Canvas.Top="100" HorizontalAlignment="Left" VerticalAlignment="Center" Width="15">
                <TextBlock Text="X"/>
                <TextBlock Text="Y"/>
                <TextBlock Text="Z"/>
            </StackPanel>
            <Button Content="Далее"  Click="NextKoordinate" Canvas.Left="180" Canvas.Top="386"  HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" Height="50" Padding="40,0,0,0"/>
        </Canvas>
    </Grid>
</Window>
